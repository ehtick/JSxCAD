const fused = Box(20, 20, 20)
  .move([0, 0], [3, 4, 6])
  .cut(Box(10, 10, 100))
  .fuse()
  .view(1)
  .md('fused');

const remeshed = fused
  .remesh()
  .view(1, { wireframe: true })
  .md('remeshed');

const smoothed = remeshed
  .smooth()
  .view(1)
  .md('smoothed');

const simplified = smoothed
  .simplify()
  .view(1)
  .md('simplified');
