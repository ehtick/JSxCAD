const penDiameter = 10.5;
const magnetDiameter = 5.0;
const magnetHeight = 2.5;

const magneticPenHolder = Arc(magnetDiameter)
  .material('steel')
  .ez(magnetHeight)
  .fit(
    Arc(magnetDiameter + 2)
      .material('plastic')
      .ez(magnetHeight)
  )
  .to(YZ(0))
  .by(align('z>'))
  .fit(
    Arc(penDiameter)
      .material('plastic')
      .voidIn(offset(1))
      .ez(magnetDiameter + 2 + 0.1, -0.1)
      .by(align('x<'))
      .x(1.1)
  )
  .view()
  .stl('holder', drop('material:steel'));
