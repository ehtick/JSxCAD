const box = await Box(8, 3.2 * 4).y(3.2 * 2);

const technic = await Group(box, Arc(4.8 + 0.2).y(5.6))
  .fill()
  .ez(8 - 0.8, 0.8)
  .and(
    Group(box, Arc(6.2 + 0.2).y(5.6))
      .fill()
      .ez(0.8)
  )
  .and(
    Group(box, Arc(6.2 + 0.2).y(5.6))
      .fill()
      .ez(8, 8 - 0.8)
  )
  .stl('technic');

const technic_1x6 = await Group(seq((n) => technic.x(n), { upto: 48, by: 8 }))
  .by(align())
  .view();

const technicConnector = await Arc(4.8)
  .ez(8, -8)
  .to(XZ())
  .add(
    Arc(6.2)
      .ez(0.8 - 0.2)
      .to(XZ())
  )
  .add(
    Arc(5.5)
      .ez(0.4)
      .to(XZ())
      .y(-8 + 0.2)
  )
  .add(
    Arc(5.5)
      .ez(0.4)
      .to(XZ())
      .y(8 - 0.2)
  )
  .cut(
    YZ()
      .Box(10, 6, 0.5)
      .y(-8 + 3)
  )
  .cut(
    YZ()
      .Box(10, 6, 0.5)
      .y(8 - 3)
  )
  .clip(XZ().Box(4.5, 6.2, 16))
  .material('plastic')
  .stl('technicConnector');

